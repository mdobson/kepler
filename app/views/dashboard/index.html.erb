<br/>
<h1>Dashboard</h1>
<br/>
<h3>Users</h3>
<%= link_to "Add a User", new_study_access_control_path %>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Email</th>
			<th>Is Admin?</th>
			<th>Can Read?</th>
			<th>Can Write?</th>
		</tr>
	</thead>
	<tbody>
	<% @users_in_study.each do |acl| %>
		<tr>
			<td><%= acl.user.email %></td>
			<td><%= acl.is_admin %></td>
			<td><%= acl.can_read %></td>
			<td><%= acl.can_write %></td>
		</tr>
	<% end %>
	</tbody>
</table>

<br/>
<br/>
<h3>Announcements</h3>
<br/>
<%= link_to "Create An Announcement", new_study_announcement_path %>
<br/>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Title</th>
			<th>By</th>
		</tr>
	</thead>
	<tbody>

	<% @posts.each do |p| %>
		<tr>
			<td><%= p.title %></td>
			<td><%= p.user.email %></td>
		</tr>
	<% end %>
	</tbody>
</table>