<%= form_tag(study_form_index_path, :method => "post") do %>
	<% @forms.each do |form| %>
		<h3><%=form.name %></h3>
		<br/><br/>
		<%= hidden_field_tag("form_id", form.id) %>
		<% form.fields.each do |field|%>
			<%= field.field_question %><br/>
			<%= field.field_helptext %><br/>
			<%= convert_form_data_type(field) %><br/>
			<%= field.field_name %><br/><br/>
		<% end %>
	<% end %>
	<br/>
	<%= submit_tag("Submit", :class=>"btn btn-info") %>
<% end %>