<% content_for(:crumbs) do %>
  <ul class="breadcrumb">
  	<li>
    	<%= link_to "Forms", study_form_index_path%> <span class="divider">/</span>
  	</li>
  	<li class="active"><%= @form.name %></li>
  </ul>
<% end %>
<%= form_tag(study_form_index_path, :method => "post") do %>
	<h3><%=@form.name %></h3>
	<br/><br/>
	<%= hidden_field_tag("form_id", @form.id) %>
	<% @form.fields.order("position").each do |field|%>
		<%= field.question %><br/>
		<%= convert_form_data_type(field.metadata) %><br/>
		<%= field.datapoint %><br/><br/>
	<% end %>
	<%= submit_tag("Submit", :class=>"btn btn-info") %>
<% end %>
<br/>
